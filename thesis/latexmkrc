# ---- output dir ----
$out_dir = 'build';

# ---- engine ----
$pdf_mode = 1;
$xelatex = 'xelatex -interaction=nonstopmode -file-line-error %O %S';

# ---- (optional) copy pdf to thesis/ after successful build ----
# If you want ONLY build/main.pdf, comment out the following lines.
add_cus_dep('tex', 'pdf', 0, 'copy_pdf_to_root');
sub copy_pdf_to_root {
    my ($base) = @_;
    system("cp build/$base.pdf .");
}
